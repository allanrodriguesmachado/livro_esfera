                <input type="text" id="tituloLivro" name="titulo" class="form-control" required>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-bold" for="editoraLivro"><i class="fas fa-building text-dark me-2"></i> Editora</label>
                <input type="text" id="editoraLivro" name="editora" class="form-control" required>
            </div>
        </div>

        <div class="row mb-3">
